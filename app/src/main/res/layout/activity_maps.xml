<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.MapsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/linearLayout1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:elevation="10dp"
                android:background="@drawable/curved_toolbar"
                android:id="@+id/relLayout1"
                android:orientation="vertical">
                <androidx.appcompat.widget.Toolbar
                    style="@style/Widget.AppCompat.ActionBar.Solid"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/toolbar"/>
                <ProgressBar
                    android:layout_width="match_parent"
                    android:id="@+id/progress_bar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-7dp"
                    android:layout_marginBottom="-7dp"
                    />
            </LinearLayout>
            <ViewAnimator
                android:id="@+id/view_animator"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/relLayout1"
                android:layout_alignStart="@+id/relLayout1"
                android:layout_alignEnd="@+id/relLayout1"
                android:background="#FFF"
                android:elevation="10dp"
                android:visibility="gone">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    />
            </ViewAnimator>

            <LinearLayout
                android:id="@+id/exit_direction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal"
                android:elevation="10dp">

            </LinearLayout>
            <androidx.fragment.app.FragmentContainerView xmlns:map="http://schemas.android.com/apk/res-auto"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="5dp"
                map:cameraBearing="112.5"
                map:cameraZoom="13"
                map:mapType="normal"
                map:uiCompass="true"
                map:uiRotateGestures="true"
                map:uiScrollGestures="true"
                map:uiTiltGestures="true"
                map:uiZoomControls="true"
                map:uiZoomGestures="true"
                tools:layout="@layout/activity_maps" />
        </RelativeLayout>
        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:measureAllChildren="false"
            android:fillViewport="true"
            android:layout_marginTop="65dp"
            android:layout_alignParentTop="true">
            <LinearLayout
                android:id="@+id/facilities_buttons_layout"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:layoutDirection="ltr">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_options_restaurant"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/round_button"
                    android:drawableLeft="@drawable/custom_button_icon"
                    android:drawablePadding="5dp"
                    android:textColor="#FFFFFF"
                    android:paddingStart="@dimen/list_item_spacing_quarter"
                    android:paddingEnd="@dimen/list_item_spacing_quarter"
                    android:text="@string/restaurant"
                    android:textSize="@dimen/list_item_text_size" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_options_carpark"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/round_button"
                    android:drawableLeft="@drawable/custom_ic_carpark"
                    android:drawablePadding="5dp"
                    android:textColor="#FFFFFF"
                    android:paddingStart="@dimen/list_item_spacing_quarter"
                    android:paddingEnd="@dimen/list_item_spacing_quarter"
                    android:text="@string/car_park"
                    android:textSize="@dimen/list_item_text_size" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_options_petro_station"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/round_button"
                    android:drawableLeft="@drawable/custom_ic_petrostation"
                    android:drawablePadding="5dp"
                    android:paddingStart="@dimen/list_item_spacing_quarter"
                    android:paddingEnd="@dimen/list_item_spacing_quarter"
                    android:text="@string/petrol_station"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/list_item_text_size" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_options_hospital"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/round_button"
                    android:drawableLeft="@drawable/custom_ic_hospital"
                    android:drawablePadding="5dp"
                    android:textColor="#FFFFFF"
                    android:paddingStart="@dimen/list_item_spacing_quarter"
                    android:paddingEnd="@dimen/list_item_spacing_quarter"
                    android:text="@string/hospital"
                    android:textSize="@dimen/list_item_text_size" />

            </LinearLayout>
        </HorizontalScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="100dp">
            <androidx.fragment.app.FragmentContainerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/filter_fragment_container_view"/>
        </RelativeLayout>

        <!--        android:layout_alignParentStart="true"/>-->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/custom_ic_location"
            android:id="@+id/ic_my_location"
            android:scaleType="center"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/custom_ic_fav"
            android:id="@+id/ic_my_fav"
            android:scaleType="center"/>
    </RelativeLayout>
    <include
        layout="@layout/bottom_sheet"/>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_height="75dp"
        app:itemIconSize = "40dp"
        app:itemBackground="@color/red_dark"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_nav_menu"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>